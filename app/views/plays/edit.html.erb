<!DOCTYPE html>
<html>
  <head>
    <title></title>
  </head>
  <body>
    <h1>Edit Broadway Play</h1>
    <%= simple_form_for @play, html: {multipart: true} do |f| %>
      <%= f.select :category_id, @categories %>
      <%= f.file_field :play_img %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :director %>
      <%= f.button :submit %>
    <% end %>
  </body>
</html>